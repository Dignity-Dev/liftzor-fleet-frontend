<!-- container-fluid -->
<style>
    .atm-card {
      width: 100%;
      max-width: 500px;
      border-radius: 25px;
      background: linear-gradient(135deg, #0d6efd, #6610f2);
      color: #ffffff;
      padding: 35px 30px;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.4);
      font-family: 'Poppins', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0 auto;
      position: relative;
      overflow: hidden;
    }

    .atm-chip {
      width: 60px;
      height: 40px;
      background: linear-gradient(45deg, gold, #f8e473);
      border-radius: 10px;
      margin-bottom: 30px;
    }

    .atm-account-number {
      letter-spacing: 4px;
      font-size: 1.8rem;
      margin: 30px 0 15px;
      font-weight: 600;
    }

    .atm-label {
      font-size: 1rem;
      opacity: 0.8;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .atm-footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-size: 1rem;
      margin-top: 25px;
    }

    .atm-footer div {
      text-align: left;
    }

    .atm-footer .balance {
      font-size: 1.2rem;
      font-weight: bold;
    }

    .atm-card::before {
      content: "";
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: linear-gradient(
        120deg,
        rgba(255, 255, 255, 0.1) 0%,
        rgba(255, 255, 255, 0.2) 50%,
        rgba(255, 255, 255, 0.1) 100%
      );
      transform: rotate(25deg);
      pointer-events: none;
    }
  </style>

<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between bg-galaxy-transparent">
                <h4 class="mb-sm-0">Manage Account</h4>

                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Account</a></li>
                        <li class="breadcrumb-item active">Manage Account</li>
                    </ol>
                </div>

            </div>
        </div>
    </div>
    <!-- end page title -->



    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header align-items-center d-flex">
                    <h4 class="card-title mb-0 flex-grow-1">Account Management</h4>
                    <div class="flex-shrink-0">
                        <button class="btn btn-primary" onclick="window.history.back()"><i
                                class="ri-arrow-go-back-fill"></i> Back</button>
                    </div>
                </div>
                <div class="card-body">
                    <h4 class="mb-4">Your Bank Account</h4>

                    <% if (error) { %>
                        <script>
                            Swal.fire({
                                icon: 'error',
                                text: '<%= error %>',
                            });
                        </script>
                        <% } %>

                            <% if (success) { %>
                                <script>
                                    Swal.fire({
                                        icon: 'success',
                                        text: '<%= success %>',
                                    });
                                </script>
                                <% } %>

                                    <% if (account && account.length> 0) { %>
                                        <% const acc=account[0]; %> <!-- grab the first object -->

                                            <div class="atm-card">
                                                <div class="atm-chip"></div>

                                                <div class="atm-label">Account Number</div>
                                                <div class="atm-account-number">
                                                    <%= acc.accountNumber || 'N/A' %>
                                                </div>

                                                <div class="atm-footer mt-4">
                                                    <div>
                                                        <div class="atm-label">Account Name</div>
                                                        <div>
                                                            <%= acc.accountName || acc.fullName || 'No Name' %>
                                                        </div>
                                                    </div>
                                                    <div>
                                                        <div class="atm-label">Bank Name</div>
                                                        <div>
                                                            <%= acc.bankName || 'No Bank Name' %>
                                                        </div>
                                                    </div>
                                                    <div class="text-end">
                                                        <div class="atm-label">Balance</div>
                                                        <div>â‚¦<%= acc.balance ? acc.balance.toLocaleString() : '0' %>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <% } else { %>
                                                <p>No account details found!</p>
                                                <% } %>

                </div>
            </div>
        </div>
        <!--end col-->
    </div>
    <!--end row-->



</div>

<!-- container-fluid -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<% if (success) { %>
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Success!',
            text: "<%= success %>",
            confirmButtonColor: '#198754',
        });
    </script>
    <% } %>

        <% if (error) { %>
            <script>
                Swal.fire({
                    icon: 'error',
                    title: 'Error!',
                    text: "<%= error %>",
                    confirmButtonColor: '#dc3545',
                });
            </script>
            <% } %>
