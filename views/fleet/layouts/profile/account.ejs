<!-- container-fluid -->

<style>
    .atm-card {
        width: 100%;
        max-width: 420px;
        border-radius: 20px;
        background: linear-gradient(135deg, #0d6efd, #6610f2);
        color: white;
        padding: 30px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0 auto;
    }

    .atm-chip {
        width: 50px;
        height: 35px;
        background-color: gold;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .atm-account-number {
        letter-spacing: 3px;
        font-size: 1.4rem;
        margin: 20px 0;
    }

    .atm-label {
        font-size: 0.9rem;
        opacity: 0.8;
    }

    .atm-footer {
        display: flex;
        justify-content: space-between;
        font-size: 0.95rem;
    }
</style>
<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between bg-galaxy-transparent">
                <h4 class="mb-sm-0">Manage Account</h4>

                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Account</a></li>
                        <li class="breadcrumb-item active">Manage Account</li>
                    </ol>
                </div>

            </div>
        </div>
    </div>
    <!-- end page title -->



    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header align-items-center d-flex">
                    <h4 class="card-title mb-0 flex-grow-1">Account Management</h4>
                    <div class="flex-shrink-0">
                        <button class="btn btn-primary" onclick="window.history.back()"><i
                                class="ri-arrow-go-back-fill"></i> Back</button>
                    </div>
                </div>
                <div class="card-body">
                    <h4 class="mb-4">Your Bank Account</h4>

                    <% if (error) { %>
                        <div class="alert alert-danger">
                            <%= error %>
                        </div>
                        <% } else if (account) { %>
                            <div class="atm-card">
                                <div class="atm-chip"></div>

                                <div class="atm-label">Bank</div>
                                <div class="fw-bold fs-5 mb-2">
                                    <%= account.bankName %>
                                </div>

                                <div class="atm-label">Account Number</div>
                                <div class="atm-account-number">
                                    <%= account.accountNumber %>
                                </div>

                                <div class="atm-footer mt-4">
                                    <div>
                                        <div class="atm-label">Account Name</div>
                                        <div>
                                            <%= account.accountName %>
                                        </div>
                                    </div>
                                    <div class="text-end">
                                        <div class="atm-label">Type</div>
                                        <div>Fleet Owner</div>
                                    </div>
                                </div>
                            </div>
                            <% } %>


                </div>
            </div>
        </div>
        <!--end col-->
    </div>
    <!--end row-->



</div>

<!-- container-fluid -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<% if (success) { %>
<script>
  Swal.fire({
    icon: 'success',
    title: 'Success!',
    text: "<%= success %>",
    confirmButtonColor: '#198754',
  });
</script>
<% } %>

<% if (error) { %>
<script>
  Swal.fire({
    icon: 'error',
    title: 'Error!',
    text: "<%= error %>",
    confirmButtonColor: '#dc3545',
  });
</script>
<% } %>
