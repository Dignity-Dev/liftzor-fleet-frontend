<!-- container-fluid -->

<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between bg-galaxy-transparent">
                <h4 class="mb-sm-0">All Withdrawals</h4>

                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Withdrawals</a></li>
                        <li class="breadcrumb-item active">All Withdrawals</li>
                    </ol>
                </div>

            </div>
        </div>
    </div>
    <!-- end page title -->



    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header align-items-center d-flex">
                    <h4 class="card-title mb-0 flex-grow-1">All Withdrawals</h4>
                    <div class="flex-shrink-0">
                        <button class="btn btn-primary" onclick="window.history.back()"><i
                                class="ri-arrow-go-back-fill"></i> Back</button>
                    </div>
                </div>
                <div class="card-body">


                    <h4>All Withdrawals</h4>
                    <% if (error) { %>
                      <div class="alert alert-danger"><%= error %></div>
                    <% } %>
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                          <th>Amount</th>
                          <th>Status</th>
                          <th>Date</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% withdrawals.forEach(w => { %>
                          <tr>
                            <td><%= w.amount %></td>
                            <td><%= w.status %></td>
                            <td><%= new Date(w.date).toLocaleDateString() %></td>
                          </tr>
                        <% }) %>
                      </tbody>
                    </table>

                </div>
            </div>
        </div>
        <!--end col-->
    </div>
    <!--end row-->



</div>

<!-- container-fluid -->
