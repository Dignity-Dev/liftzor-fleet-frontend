<!-- container-fluid -->

<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between bg-galaxy-transparent">
                <h4 class="mb-sm-0">Manage Withdraw</h4>

                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Withdraw</a></li>
                        <li class="breadcrumb-item active">Manage Withdraw</li>
                    </ol>
                </div>

            </div>
        </div>
    </div>
    <!-- end page title -->



    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header align-items-center d-flex">
                    <h4 class="card-title mb-0 flex-grow-1">Manage Withdraw</h4>
                    <div class="flex-shrink-0">
                        <button class="btn btn-primary" onclick="window.history.back()"><i
                                class="ri-arrow-go-back-fill"></i> Back</button>
                    </div>
                </div>
                <div class="card-body">



                    <h4>Withdraw Funds</h4>
                    <% if (error) { %>
                      <div class="alert alert-danger"><%= error %></div>
                    <% } %>
                    <form action="/withdraw" method="POST">
                      <div class="mb-3">
                        <label class="form-label">Amount</label>
                        <input type="number" name="amount" class="form-control" required>
                      </div>
                      <button class="btn btn-success" type="submit">Withdraw</button>
                    </form>


                </div>
            </div>
        </div>
        <!--end col-->
    </div>
    <!--end row-->



</div>

<!-- container-fluid -->
